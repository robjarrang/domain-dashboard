generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id                 String   @id @default(cuid())
  name               String   @unique
  dkimSelector       String
  dkim               String?
  spf                String?
  dmarc              String?
  dkimStatus         String?  // Added field
  spfStatus          String?  // Added field
  dmarcStatus        String?  // Added field
  dismissedAdvisories String?
  lastChecked        DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
